doctype html
html(lang="de")
  head
    block head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name='viewport', content='width=device-width')
      //link(rel="stylesheet", type="text/css", href="//fonts.googleapis.com/css?family=Lobster")
      link(rel="stylesheet", href="/style/main.css")
      link(rel="icon", href="/favicon.ico", type="image/vnd.microsoft.icon")
      include ./lib/facebook.jade
      title
        block title
          = title
  body
    .container-fluid
      header#blogheader
        block header
          div.logo
            h1
              a(href='/') Flauschiversum
            p.description Mehr als nur eine Masche
              small immer Sonntags
      block content
        != contents

      footer.center
        block footer
          p &copy; #{ new Date().getFullYear() } Ermeline Wollknoll &mdash;&nbsp;
            a(href='/impressum.html') Impressum
  
  block js
